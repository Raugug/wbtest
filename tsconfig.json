{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": [
      "es2019"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "server/**/*.ts",
    "server/index.ts",
    "charger/**/*.mock.ts",
    "charger/index.ts",
    "widget/**/*.mock.ts",
    "widget/index.ts",
  ]
}